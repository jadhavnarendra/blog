
<html>
<style>
body {
    #margin:50px 0; 
    #padding:0;
    text-align:center;
    background-color: blanchedalmond;
}
.container {
    text-align: -webkit-center;
    #margin-top: 60px;
}

</style>

<body>
<div class="container">
<h1>Articles</h1>
<%= link_to "New Article", new_article_path, class: 'btn btn-success butt' %>
<table id="customers">

     <tr>
      <th>Image</th>
      <th>Title</th>
      <th>Email</th>
      <th>Password</th>
      <th>Body</th>
      <th colspan="3">Action</th>
     </tr>

    
  <% @articles.each do |article| %>
      
    <tr>
      <td><%= image_tag article.image, width: "70px" %></td>
      <td><%= article.title %></td>
      <td><%= article.email %></td>
      <td><%= article.password %></td>
      <td><%= article.body %></td>
      <td><%= link_to "Show", article_path(article), class: 'btn btn-success butt' %></td>
      <td><%= link_to "Edit", edit_article_path(article), class: 'btn btn-success butt' %></td>
      <td><%= link_to "Delete", article_path(article),
      method: :delete,
      data: { confirm: "Are you sure?" }, class: 'btn btn-success butt' %></td>
    </tr>
     
  <% end %>
</table>

</div>
</body>
</html>

<div "align=center">
<%= will_paginate %>

</div>

